document.addEventListener("DOMContentLoaded",() => {
    let input1 = document.querySelector("#input1");
    let input2 = document.querySelector("#input2");
    let binop  = document.querySelector('#binop');
    let result = document.querySelector('#result');

    handler = (e) => {
        let num1 = parseFloat(input1.value);
        let num2 = parseFloat(input2.value);
        let output = 0;
        switch(binop.value) {
            case 'add':
                output = num1+num2;
                break;
            case 'sub':
                output = num1-num2;
                break;
            case 'mult':
                output = num1 * num2;
                break;
            case 'div':
                if (num2 === 0) {
                    output = "You can't divide by zero"
                } else {
                    output = num1/num2
                }
                break;
            default:
                output="Undefined operation"
                break;
        }
        if (isNaN(output) && num2 != 0) {
            output = "Please enter both values"
        }
        result.innerText=output
    }

    button.addEventListener('button',handler)
});
